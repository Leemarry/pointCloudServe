<!--                values (#{mark}, #{path}, #{size}, #{createTime}, #{type}, #{deviceName}, #{deviceId}, #{towerId})-->
<!--    </insert>-->
    <insert id="insertVideo" keyProperty="id" useGeneratedKeys="true">
        insert into ef_video(mark, path, size, create_time, type, device_name, device_id, tower_id, formats)
        values (#{mark}, #{path}, #{size}, #{createTime}, #{type}, #{deviceName}, #{deviceId}, #{towerId}, #{formats})
    </insert>


</mapper>





