    <insert id="batchInsertTower" keyProperty="id" useGeneratedKeys="true">
        insert into ef_tower (id, name, mark, lat, lng, absalt, alt, vertical_line_arc, line_line_dis, line_tower_dis, tower_rotation_angle, create_time, update_time, des, type, span, terrain)
        values
        <foreach collection="towerList" item="entity" separator=",">
            (#{entity.id}, #{entity.name}, #{entity.mark}, #{entity.lat}, #{entity.lon}, #{entity.absalt}, #{entity.alt}, #{entity.verticalLineArc}, #{entity.lineLineDis}, #{entity.lineTowerDis}, #{entity.towerRotationAngle}, #{entity.createTime}, #{entity.updateTime}, #{entity.des}, #{entity.type}, #{entity.span}, #{entity.terrain})
        </foreach>
    </insert>

    <insert id="insertBatchByList" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO ef_handle_waypoint (id,lat,lng,alt,seed_num,handle_id,fly_times) VALUES
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id},#{entity.lat},#{entity.lng},#{entity.alt},#{entity.seedNum},#{entity.handleId},#{entity.flyTimes})
        </foreach>

    </insert>


</mapper>

