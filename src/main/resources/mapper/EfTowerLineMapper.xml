    <insert id="batchInsertLine" keyProperty="id" useGeneratedKeys="true">
        insert into tower_line (id, mark, start_tower_mark, end_tower_mark, line_length, create_time, des)
        values
        <foreach collection="lineList" item="entity" separator=",">
            (#{entity.id}, #{entity.mark}, #{entity.startTowerMark}, #{entity.endTowerMark}, #{entity.lineLength}, #{entity.createTime}, #{entity.des})
        </foreach>
    </insert>



